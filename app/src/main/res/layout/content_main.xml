<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="50dp"
    android:paddingBottom="64dp">


<!--    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </RelativeLayout>-->

    <EditText
        style="@style/numberField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberField"
        android:layout_gravity="center_horizontal"
        android:text="Enter values" />

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button00"
            style="@style/button_calc"
            android:onClick="buttonClicked"
            android:text="7"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button01"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button00"
            android:layout_toRightOf="@id/button00"
            android:text="8"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            android:id="@+id/button02"
            style="@style/button_calc"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button01"
            android:layout_toRightOf="@id/button01"
            android:text="9"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button03"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button02"
            android:layout_toRightOf="@id/button02"
            android:text="C"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button04"
            android:onClick="buttonClicked"
            android:layout_below="@id/button00"
            android:text="4"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button05"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button04"
            android:layout_toRightOf="@id/button04"
            android:text="5"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button06"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button05"
            android:layout_toRightOf="@id/button05"
            android:text="6"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            style="@style/button_calc"
            android:id="@+id/button08"
            android:onClick="buttonClicked"
            android:layout_below="@id/button04"
            android:text="1"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button09"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button08"
            android:layout_toRightOf="@id/button08"
            android:text="2"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button10"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button09"
            android:layout_toRightOf="@id/button09"
            android:text="3"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button11"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button06"
            android:layout_toRightOf="@id/button06"
            android:text="+"
            app:layout_heightPercent="40%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button12"
            android:onClick="buttonClicked"
            android:layout_below="@id/button08"
            android:text="0"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="50%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button13"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button12"
            android:layout_toRightOf="@id/button12"
            android:text=","
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            style="@style/button_calc"
            android:id="@+id/button14"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button13"
            android:layout_toRightOf="@id/button13"
            android:text="-"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            style="@style/button_calc"
            android:id="@+id/button15"
            android:onClick="buttonClicked"
            android:layout_below="@id/button12"
            android:text="/"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />

        <Button
            style="@style/button_calc"
            android:id="@+id/button16"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button15"
            android:layout_toRightOf="@id/button15"
            android:text="*"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%" />
        <Button
            style="@style/button_calc"
            android:id="@+id/button17"
            android:onClick="buttonClicked"
            android:layout_alignTop="@id/button16"
            android:layout_toRightOf="@id/button16"
            android:text="="
            app:layout_heightPercent="20%"
            app:layout_widthPercent="50%" />




    </android.support.percent.PercentRelativeLayout>

</LinearLayout>